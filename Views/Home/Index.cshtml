@{
  Layout = "_Layout";
}
<div class="jumbotron">
  <h1>Address Book</h1>
  <p>Current Contacts</p>
</div>

<div class="well search-well">
  <form method="post" action="/search">
    <label for="search">Search Contacts by Name</label>
    <input type="text" id="search" name="search" class="form-control search-bar">
    <button type="submit" class="btn btn-default search-button">Submit</button>
  </form>
  <p><a href="/clear" class="action action-small">Clear Search</a></p>
</div>

@if (Model.Count == 0)
{
  <div class="well">
    <span class="no-contacts">No Contacts!</span>
  </div>
}
@foreach (var contact in Model)
{
  <div class="well">
    <ul class="list-unstyled">
      <li><a href="/@contact.GetId()"><span class="display-name">@contact.GetName()</span></a>
      <form method="post" action="/contacts/delete/@contact.GetId()">
        <button type="submit" class="btn btn-warning btn-xs delete-button">Delete?</button>
      </form>
    </ul>
  </div>
}

<p class="no-space"><a href="/contacts/new" class="action">Add New Contact</a></p>
<form method="post" action="/delete">
  <button type="submit" class="btn btn-danger delete-all-button">Delete all?</button>
</form>
